{
	"name": "@gamesdonequick/bingosync-api",
	"version": "1.0.0",
	"description": "Programmatically interact with bingosync.com in realtime.",
	"main": "build/index.js",
	"files": [
		"build"
	],
	"scripts": {
		"pretest": "npm run lint && npm run build",
		"test": "mocha",
		"build": "tsc -p tsconfig.json",
		"lint": "npm-run-all -s lint:*",
		"lint:prettier": "prettier --list-different \"**/*.{ts,tsx,json,md,yml}\"",
		"lint:eslint": "eslint \"./**/*.{ts,tsx}\"",
		"fix": "npm-run-all -s fix:*",
		"fix:prettier": "prettier --write \"**/*.{ts,tsx,json,md,yml}\"",
		"fix:eslint": "npm run lint:eslint -- --fix "
	},
	"author": "Games Done Quick, LLC <engineering@gamesdonequick.com>",
	"license": "MIT",
	"devDependencies": {
		"@gamesdonequick/eslint-config": "^1.0.1",
		"@gamesdonequick/prettier-config": "^1.0.1",
		"@types/chai": "^4.2.0",
		"@types/chai-as-promised": "^7.1.2",
		"@types/debug": "^4.1.5",
		"@types/fetch-mock": "^7.3.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.7.2",
		"@types/node-localstorage": "^1.3.0",
		"@types/sinon": "^7.0.13",
		"@types/ws": "^6.0.3",
		"chai": "^4.2.0",
		"chai-as-promised": "^7.1.1",
		"eslint": "^6.2.2",
		"fast-deep-equal": "^2.0.1",
		"husky": "^3.0.4",
		"lint-staged": "^9.2.3",
		"mock-socket": "^9.0.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.18.2",
		"typescript": "^3.5.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,tsx,json,md,yml}": [
			"prettier --write",
			"git add"
		],
		"*.{ts,tsx}": [
			"eslint --fix",
			"git add"
		]
	},
	"dependencies": {
		"debug": "^4.1.1",
		"eventemitter3": "^4.0.0",
		"fetch-mock": "^7.3.9",
		"isomorphic-ws": "^4.0.1",
		"ky-universal": "^0.3.0",
		"mocha": "^6.2.0",
		"node-localstorage": "^1.3.1",
		"sinon": "^7.4.1",
		"ws": "^7.1.2"
	}
}
